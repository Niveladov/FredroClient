<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup> 
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
  </startup>
  <system.serviceModel>
    <services>
      <service name ="FredroWcfServer.FredroWcfServer" behaviorConfiguration="mexBahavior">
        <endpoint address="FredroWcfServer" binding="basicHttpBinding" contract="FredroWcfServer.IFredroWcfServer"></endpoint>
        <endpoint address="FredroWcfServer" binding="netTcpBinding" contract="FredroWcfServer.IFredroWcfServer"></endpoint>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange"></endpoint>
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8080/"/>
            <add baseAddress="net.tcp://localhost:47777/"/>
          </baseAddresses>
        </host>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name ="mexBahavior">
          <serviceMetadata httpGetEnabled="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>